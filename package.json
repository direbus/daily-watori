{
  "name": "daily-watori",
  "version": "2.0.0",
  "private": true,
  "description": "Bot that manages and retweets relevant tweets for you",
  "main": "build/src/index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "nodemon src/index.ts",
    "lint": "eslint packages/**",
    "lint:fix": "eslint --fix packages/**",
    "build": "yarn workspaces run build",
    "postuninstall": "npm prune",
    "migration:create": "sh -c 'ts-node node_modules/.bin/migrate-mongo create $0 -f migrate-mongo-config.ts' ",
    "migration:status": "ts-node node_modules/.bin/migrate-mongo status -f migrate-mongo-config.ts",
    "migration:up": "ts-node node_modules/.bin/migrate-mongo up -f migrate-mongo-config.ts && npm run migration:status",
    "migration:down": "ts-node node_modules/.bin/migrate-mongo down -f migrate-mongo-config.ts && npm run migration:status",
    "db:purge": "npm run migration:down && npm run migration:up",
    "release": "auto shipit"
  },
  "keywords": [],
  "maintainers": [
    {
      "name": "Chris Qiang",
      "email": "chris@christianto.net",
      "url": "https://christianto.net"
    },
    {
      "name": "Namechee",
      "url": "https://github.com/namchee"
    }
  ],
  "license": "ISC",
  "devDependencies": {
    "@types/mongodb": "^3.6.3",
    "@types/node": "^17.0.15",
    "@types/node-cron": "^2.0.3",
    "@types/pino": "^6.3.5",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^8.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-jsdoc": "^37.7.1",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "twitter-d": "^0.4.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@auto-it/first-time-contributor": "^10.13.3",
    "@auto-it/git-tag": "^10.13.3",
    "auto": "^10.13.3",
    "date-fns": "^2.16.1",
    "discord.js": "^12.5.1",
    "migrate-mongo": "^8.1.4",
    "mongodb": "^3.6.3",
    "node-cron": "^2.0.3",
    "pino": "^6.11.0",
    "pino-pretty": "^4.4.0",
    "tslib": "^2.1.0",
    "twitter-lite": "^0.14.0"
  },
  "auto": {
    "plugins": [
      "git-tag",
      "first-time-contributor",
      "released"
    ],
    "name": "Replica (レプリカ)",
    "email": "bots+repurika@christianto.net"
  }
}
